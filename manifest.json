{
  "manifest_version": 2,
  "name": "Responsive Bitbucket",
  "version": "0.1",
  "description": "Resizes Bitbucket.com README.md pages to fit on slimmer screens.",
  "author": "Ethan Hall",

  "background": {
    "scripts": ["script.js"],
    "persistent": false
    },

  "browser_action": {
    "default_title": "Responsive Bitbucket",
    "default_icon": "icon.png"
  },

  "permissions": [
    "activeTab"
  ]
}
